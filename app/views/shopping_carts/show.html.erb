<div class="card large-padding">
    <table class="table table-striped table-hover medium" id="table_shopping_cart">
		<thead>
		    <td>Producto</td>
		    <td>Costo</td>
		    <td>Acciones</td>
		</thead>
			
		<tbody>
		    <% @shopping_cart.in_shopping_carts.each do |i_sh| %>
				<% product = i_sh.product %>
				<tr><% {id: "#{product.id}"}%></tr>
				<td><%= product.name %></td>
				<td><%= product.pricing %></td>
				<td><%= link_to "Eliminar",i_sh,method: :delete %></td>
			<% end %>
		</tbody>
			
	</table>
	<div class="top-space large-padding text-center" id="payment_form">
	    
	</div>
		<p class="medium">
		    <strong>
		        Total: $ 
		        <%= @shopping_cart.total %>
				
		    </strong>
		</p>
		
</div>
	