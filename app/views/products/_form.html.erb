<%= form_for @product, builder: BootstrapFormBuilder do |f| %>
  <%= f.errors %>
  <%= f.text_field :name %>
  <small>Precio en centavos de dolar</small>
  <%= f.text_field :pricing %>
  <%= f.file_field :avatar %>
  <%= f.text_area :description %>
  <%# f.text_field :user_id %>
  <%= f.submit "Enviar" %>
<% end %>
