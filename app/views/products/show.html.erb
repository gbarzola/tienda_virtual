
<div class="container">
    <div class="row">
        <div class="col-md-12 no-float">
            <div class="card large-padding">
                <div class="col-md-12">
                  <h1 class="grey-text bold"><%= @product.name %></h1>
                </div>
                <div class="col-md-6 img-fluid">
                  <%=image_tag @product.avatar.url, :style => "max-width: 100%;" %>                   
                </div> 
                <div class="col-md-6">
                  <h3 class="blue-text bold normal"><%= @product.user.email %></h3>
                  <h3 class="green-text bold normal">
                    Precio :
                    <span class="grey-text"><%= @product.pricing %></span>
                  </h3>
                  <h3 class="green-text bold normal">
                    Archivos:
                    <span class="grey-text">20</span>
                  </h3>
                  <h3 class="green-text bold normal">
                    Tama√±o:
                    <span class="grey-text">"2gb"</span>
                  </h3>
                  <%= render "in_shopping_carts/form" , product: @product %>
                </div>
                <div class="col-md-12">
                  <h3 class="green-text bold normal">Descripcion</h3>
                  <p>
                    <%= @product.description %>
                  </p>
                </div>
            </div>
        </div>
    </div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
